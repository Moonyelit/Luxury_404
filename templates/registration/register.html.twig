{% block main %}
	<!-- Page Header-->
	<section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h2 class="white-text">
						Register
					</h2>
					<span class="white-text">
						Welcome on board
					</span>
					<ol class="breadcrumb">
						<li>
							<a href="#!">
								Home
							</a>
						</li>
						<li class="active">
							Register
						</li>
					</ol>
				</div>
			</div>
		</div>
	</section>

	<!-- Page Content-->
	<section class="section-padding gray-bg log-section">
		<div class="container">
			<div class="row">
				<div class="col-xs-12 col-sm-6 col-sm-offset-3 card card-panel">
					<h3 class="text-extrabold">
						Create a new account
					</h3>

					{{ form_start(registrationForm, {
                    'attr': {
                        'id': 'register-form',
                        'role': 'form',
                        'method': 'post',
                        'autocomplete': 'off',
                        'data-parsley-validate': ''
                    }
                }) }}


					<div class="input-field">
						{{ form_errors(registrationForm.email) }}
						{{ form_widget(registrationForm.email, {
                        'attr': {
                            'required': 'required',
                            'data-parsley-trigger': 'change',
                            'data-parsley-error-message': 'A valid email address is required.'
                        }
                    }) }}
						{{ form_label(registrationForm.email) }}
						<span class="help-block">
							Type your email address.
						</span>
					</div>

					<div class="input-field">
						{{ form_errors(registrationForm.plainPassword.first) }}
						{{ form_widget(registrationForm.plainPassword.first, {
                        'attr': {
                            'required': 'required',
                            'data-parsley-trigger': 'change',
                            'data-parsley-minlength': '6',
                            'data-parsley-error-message': 'The password must be at least 6 characters.'
                        }
                    }) }}
						{{ form_label(registrationForm.plainPassword.first, 'Password') }}
						<i class="fa fa-eye show-password"></i>
						<span class="help-block">
							Type your password.
						</span>
					</div>

					<div class="input-field">
						{{ form_errors(registrationForm.plainPassword.second) }}
						{{ form_widget(registrationForm.plainPassword.second, {
                        'attr': {
                            'required': 'required',
                            'data-parsley-trigger': 'change',
                            'data-parsley-equalto': '#{{ registrationForm.plainPassword.first.vars.id }}',
                            'data-parsley-error-message': 'Password does not match.'
                        }
                    }) }}
						{{ form_label(registrationForm.plainPassword.second, 'Confirm Password') }}
						<i class="fa fa-eye show-password"></i>
						<span class="help-block">
							Confirm your password.
						</span>
					</div>

					<div class="checkbox">
						{{ form_errors(registrationForm.agreeTerms) }}
						{{ form_widget(registrationForm.agreeTerms) }}
                        {{ form_label(registrationForm.agreeTerms) }}

						{# {{ form_label(registrationForm.agreeTerms, 'I have read and I accept the <a href="#!" target="_blank">Terms Of Use</a>') | raw }} #}
					</div>

					<button type="submit" class="btn btn-lg gradient secondary btn-block waves-effect waves-light mt-20 mb-20">
						Create an account
					</button>

					<div class="links">
						<a href="{{ path('app_login') }}">
							Already have an account? Click here
						</a>
					</div>

					{{ form_end(registrationForm) }}
				</div>
			</div>
		</div>
	</section>
{% endblock %}
